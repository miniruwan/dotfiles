map <leader>rt :action Refactorings.QuickListPopupAction <CR>
map <leader>q  :action CloseActiveTab<CR>

map <leader>ga :action GotoAction<CR>
map <leader>gm :action FileStructurePopup<CR>
map <leader>gi :action GotoImplementation<CR>
map <leader>gd :action GotoDeclaration<CR>
map <leader>gf :action GotoFile<CR>
map <leader>gs :action GotoSymbol<CR>
map <leader>gt :action GotoClass<CR>
